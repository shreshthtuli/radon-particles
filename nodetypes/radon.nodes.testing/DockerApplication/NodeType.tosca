tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  radon.nodes.testing.DockerApplication:
    derived_from: radon.nodes.abstract.ContainerApplication
    metadata:
      targetNamespace: "radon.nodes.testing"
      abstract: "false"
      final: "false"
    properties:
      image:
        type: string
        description: Image name
      cmd:
        type: string
        description: Command to execute
    requirements:
      - engine:
          capability: radon.capabilities.container.DockerRuntime
          node: radon.nodes.abstract.ContainerRuntime
          relationship: tosca.relationships.HostedOn
          occurrences: [ 1, 1 ]
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          create:
            description: The standard create operation
            inputs:
              image:
                type: string
                required: true
                default: { get_attribute: [ SELF, image ] }
              host_ip:
                type: string
                required: true
                default: { get_attribute: [ SELF, engine, public_address ] }
              cmd:
                type: string
                required: true
                default: { get_attribute: [ SELF, cmd ] }
              username:
                type: string
                required: true
                default: { get_attribute: [ SELF, engine, name ] }
            implementation:
              primary: run
              timeout: 0
          delete:
            inputs:
              host_ip:
                type: string
                required: true
                default: { get_attribute: [ SELF, engine, public_address ] }
            implementation:
              primary: del
              timeout: 0
    artifacts:
      del:
        type: radon.artifacts.Ansible
        file: docekrdel.yaml
      run:
        type: radon.artifacts.Ansible
        file: dockerrun.yaml
